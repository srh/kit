import stdlib;
import state;

// A "printed" error happened.  (More like, "to be printed.")
struct err_printed {
  printed_meta bool;
  msg array[u8];
}

// Tells (a) if the operation failed, and (b) if it did, whether location info was printed.  Might be expanded to include other info.
enum np {
  // No failure happened.
  #NoFail void;
  // We had a failure, and an error message was printed.  True if location info was printed.
  Unprinted err_printed;
}

// Callers of this are OK with discarding Unprinted info (presumably).
func from_np(x np) bool {
  switch x {
  case NoFail: return true;
  case Unprinted(pm err_printed):
    dump_err_printed(pm);
    return false;
  }
}

// cr = check result.
enum[T] cr {
  #NoFail T;
  Unprinted err_printed;
}

func[T] ERR(x T) np { return Unprinted({false, err_string(x)}); }
func[T, U] ERR(x T, y U) np { return ERR(consup(x, y)); }
