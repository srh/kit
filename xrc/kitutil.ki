func[T] DBG(x T) void {
  r array[u8];
  build_u8str(void, &r, &x);
  push(&r, '\n');
  print(Stderr(), r);
  ign var = fflush(Stderr());
}

func dump_err_printed(pm err_printed) void {
  print(Stderr(), pm.msg);
  ign var = fflush(Stderr());
}

