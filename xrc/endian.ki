// You should probably use to_le! instead of `~`.
inline func to_le(n u32) le_u32 { return ~n; }
inline func to_le(n i32) le_i32 { return ~n; }
inline func to_le(n i16) le_i16 { return ~n; }
inline func to_le(n u16) le_u16 { return ~n; }


struct le_u32 {
  buf ^[4]u8;
}

func `~`(x u32) le_u32 {
  ret le_u32;
  write_le_u32(ixcast(&ret.buf[0]), x);
  return ret;
}

func write_le_u32(dest * ^[0]u8, x u32) void {
  dest[0] = ~ (x & 0xFF);
  dest[1] = ~ ((x >> 8) & 0xFF);
  dest[2] = ~ ((x >> 16) & 0xFF);
  dest[3] = ~ ((x >> 24) & 0xFF);
}

func `~`(x le_u32) u32 {
  ret u32 = ((~x.buf[0] | (@[u32]~x.buf[1] << 8)) | (@[u32]~x.buf[2] << 16)) | (@[u32]~x.buf[3] << 24);
  return ret;
}

struct le_i32 {
  buf ^[4]u8;
}

func `~`(x i32) le_i32 {
  ret le_i32;
  write_le_i32(ixcast(&ret.buf[0]), x);
