func write_le_i32(dest * ^[0]u8, x i32) void {
  dest[0] = ~ (x & 0xFF);
  dest[1] = ~ ((x >> 8) & 0xFF);
  dest[2] = ~ ((x >> 16) & 0xFF);
  dest[3] = ~ ((x >> 24) & 0xFF);
}

struct le_u16 {
