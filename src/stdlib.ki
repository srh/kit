def U32_MAX u32 = ^(@[u32]0);

func try_mul(x u32, y u32, out *u32) bool {
  if y != 0 && U32_MAX / y < x {
    return false;
  }
  *out = x * y;
  return true;
}

func try_add(x u32, y u32, out *u32) bool {
  if U32_MAX - y < x {
    return false;
  }
  *out = x + y;
  return true;
}

func ceil_aligned(x u32, y u32) u32 {
  if x % y == 0 {
    return x;
  }
  return x + (y - x % y);
}

func ceil_divide(x u32, y u32) u32 {
  if x % y == 0 {
    return x / y;
  } else {
    return x / y + 1;
  }
}

func ceil_divide(x size, y size) size {
  if x % y == 0 {
    return x / y;
  } else {
    return x / y + 1;
  }
}

