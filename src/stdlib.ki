func checkmalloc(n size) *void {
  ret *void = malloc(n);
  if ret == null {
    if n == 0 {
      ret = malloc(1);
    }
    if ret == null {
      crash(_u8("checkmalloc fail"));
    }
  }
  return ret;
}

