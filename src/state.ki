};

func make_checkstate(im *identmap, platform platform_info, loader_ctx *void, loader fn[*checkstate, sym, opt[array[u8]]]) checkstate {
  ret checkstate;
  ret.im = im;
  ret.instantiation_depth = 0;
  ret.platform = platform;
  ret.loader_ctx = loader_ctx;
  ret.loader = loader;
  return ret;
}

