func add_def_entry(cs *checkstate, ent def_entry) def_entry_id {
  shent shp[def_entry] = emshp(ent);
  id def_entry_id = ~count(&cs->defs);
  push(&cs->defs, shent);
  arr *array[def_entry_id] = try_insert_lookup(&cs->defs_by_name, &oo(&shent)->def_name, mk_array());
  push(arr, id);
  return id;
}

