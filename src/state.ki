defenum genparms {
  NoParms void;
  HasParms array[te_typeexpr];
};

defenum cu_genparms {
  NoParms void;
  HasParms array[cu_typeexpr];
};

func hash_compute_hash(x *cu_genparms) osize {
  switch x {
  case &NoParms(v void):
    return 1;
  case &HasParms(ps array[cu_typeexpr]):
    accum osize = 0x12345679;
    n size = count(&ps);
    p *cu_typeexpr = data(&ps);
    for i size = 0; i < n; i = i + 1 {
      accum = (accum * 33) ^ hash_compute_hash(&p[i]);
    }
    return accum;
  }
}

func hash_equal(x *cu_genparms, y *cu_genparms) bool {
  return parms_equal(x, y);
}

